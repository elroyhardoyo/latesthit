<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView android:id="@+id/pic" android:padding="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        />
    <TextView android:id="@+id/song" android:textSize="20dp" android:padding="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView android:id="@+id/singer" android:textSize="12dp" android:textColor="#888888" android:padding="2dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />



</LinearLayout>