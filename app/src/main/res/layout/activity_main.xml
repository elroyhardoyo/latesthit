<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:background="#FFFFFF"
    android:layout_height="match_parent"  tools:context=".MainActivity">

    <LinearLayout android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <TextView android:id="@+id/judul" android:text="@string/hello_world" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:padding="10dp" android:gravity="center" android:textSize="20dp" />

    <ImageView android:id="@+id/gambar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="#FFFFFF"
        android:padding="20dp"
        />

    <ListView android:padding="10dp"
        android:id="@+id/list1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"></ListView>

    </LinearLayout>

    <LinearLayout android:id="@+id/popup" android:padding="20dp" android:background="#CC000000"
        android:layout_width="fill_parent" android:orientation="vertical"
        android:layout_height="fill_parent" android:visibility="invisible">
        <Button android:text="x" android:onClick="tutupPopup"
            android:layout_width="wrap_content" android:textSize="13dp" android:padding="10dp"
            android:layout_height="wrap_content" android:layout_gravity="right" />

        <TextView android:id="@+id/popup_song"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:text="Ini Popup" android:gravity="center"
            android:textSize="30dp"
            android:textColor="#FFFFFF" />

        <ImageView android:id="@+id/popup_pic"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#FFFFFF"
            android:padding="20dp"
            />
        <TextView android:id="@+id/popup_singer"
            android:layout_width="fill_parent" android:gravity="center" android:textSize="15dp" android:paddingTop="30dp"
            android:layout_height="wrap_content" android:text="Ini Popup" android:textColor="#FFFFFF" />

    </LinearLayout>
</RelativeLayout>
